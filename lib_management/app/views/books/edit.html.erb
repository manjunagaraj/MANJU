<h1>Editing book</h1>
 
<%= form_for :book, url: book_edit_path(@book), method: :put do |f| %>
 
  <p>
    <%= f.label :book_name %><br>
    <%= f.text_field :book_name %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_area :author %>
  </p>
  <p>
    <%= f.label :publication %><br>
    <%= f.text_area :publication %>
  </p>
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
